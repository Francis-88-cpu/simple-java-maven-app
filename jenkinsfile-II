pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                echo 'checking out from  git'
                git 'https://github.com/Francis-88-cpu/simple-java-maven-app.git'
            }
        }
    }
    stages {
        stage('compiling') {
            steps {
                echo 'compile'
                sh 'mvn compile'
            }
        }
    }
    stages {
        stage('test') {
            steps {
                echo 'testing'
                sh 'mvn test'
            }
        }
    }
    stages {
        stage('package') {
            steps {
                echo 'package'
                sh 'mvn package'
            }
        }
    }
}